{% extends 'base.html.twig' %}

{% block body %}
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column is-half">
                    {{ form_start(form) }}

                    <div class="field">
                        {{ form_label(form.task) }}
                        <div class="control">
                            {{ form_widget(form.task) }}
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.due_date) }}
                        <div class="control">
                            {{ form_widget(form.due_date) }}
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.configuration['parameter1']) }}
                        <div class="control">
                            {{ form_widget(form.configuration['parameter1']) }}
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.configuration['parameter2']) }}
                        <div class="control">
                            {{ form_widget(form.configuration['parameter2']) }}
                        </div>
                    </div>

                    <hr>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            Sub parameters
                        </div>
                        <div class="field-body">
                            <div class="field">
                                {{ form_widget(form.configuration['parameter3-firstchild']) }}
                            </div>
                            <div class="field">
                                {{ form_widget(form.configuration['parameter3-secondchild']) }}
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="field">
                        <div class="control">
                            {{ form_widget(form.save) }}
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
